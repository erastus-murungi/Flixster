<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rvAdapter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="0dp"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="361dp"
        android:layout_height="252dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/ivPoster"
        android:fontFamily="@font/proxima_nova_extra_bold"
        android:textColor="@android:color/background_light"
        android:textSize="32sp"
        tools:text="Movie Title" />

    <TextView
        android:id="@+id/tvOverview"
        android:layout_width="335dp"
        android:layout_height="193dp"
        android:layout_below="@+id/tvTitle"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/ivPoster"
        android:fontFamily="@font/proxima_nova_regular"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        tools:text="&quot;An intriguing and sinful exploration of seduction, forbidden love, and redemption, Gabriel's Inferno is a captivating and wildly passionate tale of one man's escape from his own personal hell as he tries to earn the impossible--forgiveness and love.&quot;" />
</RelativeLayout>